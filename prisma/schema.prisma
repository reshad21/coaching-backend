generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Test {
  id        String   @id @default(uuid())
  test      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Batch {
  id        String    @id @default(uuid())
  // Shift String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Class     Class?    @relation(fields: [classId], references: [id])
  classId   String?
  Shift     Shift?    @relation(fields: [shiftId], references: [id])
  shiftId   String?
  students  Student[]
}

model Class {
  id        String    @id @default(uuid())
  className String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Batch     Batch[]
  Student   Student[]
}

model Shift {
  id        String    @id @default(uuid())
  shiftName String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Batch     Batch[]
  Student   Student[]
}


model Student {
  id          String    @id @default(uuid())
  studentId   String    @unique
  firstName   String
  lastName    String?
  fatherName  String?
  motherName  String?
  dateOfBirth DateTime
  religion    String?
  schoolName  String?
  phone       String
  email       String?
  address     String?
  image       String?
  gender      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  batchName   String? //it will place by backend when student create
  className   String?
  shiftName   String?
  Payment     Payment[]
  Class       Class?    @relation(fields: [classId], references: [id])
  classId     String?
  Batch       Batch?    @relation(fields: [batchId], references: [id])
  batchId     String?
  Shift       Shift?    @relation(fields: [shiftId], references: [id])
  shiftId     String?
}

model Payment {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Int
  month     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  studentId String?
  Student   Student? @relation(fields: [studentId], references: [id], onDelete: Cascade)
}
