generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id        String   @id @default(uuid())
  test      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Batch {
  id        String    @id @default(uuid())
  batchName String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Class     Class?    @relation(fields: [classId], references: [id])
  classId   String?
  Shift     Shift?    @relation(fields: [shiftId], references: [id])
  shiftId   String?
  students  Student[]
}

model Class {
  id        String    @id @default(uuid())
  className String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Batch     Batch[]
  Student   Student[]
}

model Shift {
  id        String    @id @default(uuid())
  shiftName String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Batch     Batch[]
  Student   Student[]
}

model Student {
  id            String    @id @default(uuid())
  studentId     String    @unique
  firstName     String
  lastName      String
  fatherName    String?
  motherName    String?
  // dateOfBirth   DateTime?
  religion      String?
  schoolName    String?
  phone         String
  admissionFees Int?
  address       String?
  image         String?
  gender        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  batchName     String? 
  className     String?
  shiftName     String?
  Payment       Payment[]
  Class         Class?    @relation(fields: [classId], references: [id])
  classId       String?
  Batch         Batch?    @relation(fields: [batchId], references: [id])
  batchId       String?
  Shift         Shift?    @relation(fields: [shiftId], references: [id])
  shiftId       String?
}

model Payment {
  id        String   @id @default(uuid())
  title     String
  amount    Int
  month     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  studentId String?
  Student   Student? @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model CoachingCost {
  id               String @id @default(uuid())
  month            String?
  instructorSalary Float?
  materialCost     Float?  @default(0)
  rentAndUtilities Float?  @default(0)
  marketingCost    Float?  @default(0)
  otherExpenses    Float?  @default(0)

  totalCost    Float
  totalRevenue Float
  profit       Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSetting {
  id        String   @id @default(uuid())
  brandName String
  logo      String
  favicon   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}